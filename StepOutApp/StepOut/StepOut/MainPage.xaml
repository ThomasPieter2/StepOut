    <StackLayout BackgroundColor="White">
        <StackLayout VerticalOptions="FillAndExpand"/>
        <StackLayout x:Name="contentLogin" VerticalOptions="Center" BackgroundColor="White" Margin="0">
            <Image x:Name="imgLogo" HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="90" WidthRequest="90"/>
            <Label FontSize="28" TextColor="#333B50" Text="Step Out" Margin="0, 0, 0, 42" HorizontalOptions="Center"/>
            <xfx:XfxEntry Placeholder="Email" x:Name="entryName" Margin="16, 0, 16, -26"/>
            <xfx:XfxEntry Placeholder="Password" x:Name="entryPass" IsPassword="True" Keyboard="Email" Margin="16, 0, 16, -40" />
