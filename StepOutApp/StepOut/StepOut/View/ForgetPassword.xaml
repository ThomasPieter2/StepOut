<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:xfx="clr-namespace:Xfx;assembly=Xfx.Controls"
             BackgroundColor="White"
             x:Class="StepOut.View.ForgetPassword">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" BackgroundColor="Transparent">
            <Image x:Name="imgLogo" Source="stepoutlogo.png" HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="90" WidthRequest="90"/>
            <Label FontSize="28" TextColor="#333B50" Text="Step Out" Margin="0, 0, 0, 42" VerticalOptions="Center" HorizontalOptions="Center"/>
            <Label x:Name ="lblEmail" Margin="16, 0, 16, 16" Text="Wachtwoord vergeten? Vul je email hieronder in en we sturen je een voorlopig wachtwoord. Verander deze zo snel mogelijk." TextColor="#3C4459" FontSize="16"/>
            <xfx:XfxEntry Placeholder="Email" Keyboard="Email" x:Name="entryEmail" Margin="16, 0, 16, -26"/>
            <Label x:Name="lblMelding" Margin="20, 8, 16, 0" TextColor="#a50000 "/>
            <Button x:Name="btnConfirm" FontSize="15" HeightRequest="54" VerticalOptions="EndAndExpand" TextColor="#FFFFFF" BackgroundColor="#3C4459" BorderRadius="4" Text="Verzenden" Margin="16, 24, 16, 8" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>